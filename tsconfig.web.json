{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@features/*": ["src/features/*"],
      "@main/*": ["electron/main/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "electron/preload/**/*",
    "electron/main/database/schema.ts"
  ]
}
